<a href="/bookings/add" class="mui-btn mui-btn--raised mui-btn--primary">Make a New Booking</a>

<table class="mui-table mui-table--bordered">
    <thead>
    <tr>
        <th>Booking Number</th>
        <th>Customer Name</th>
        <th>Date</th>
        <th>Time</th>
        <th>Activity Type</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% bookings.forEach(booking => { %>
        <tr>
            <td><%= booking.booking_number %></td>
            <td><%= booking.customer_name %></td>
            <td><%= booking.date.toISOString().split('T')[0] %></td>
            <td><%= booking.time %></td>
            <td><%= booking.activity_type %></td>
            <td>
                <form action="/bookings/delete/<%= booking.booking_number %>" method="POST">
                    <button type="submit" class="mui-btn mui-btn--small mui-btn--danger">Delete</button>
                </form>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>